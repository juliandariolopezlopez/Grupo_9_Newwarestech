<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/user/styles-login.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/product/style-carrito.css">
    <script src="https://kit.fontawesome.com/e6433e2354.js" crossorigin="anonymous"></script>
<title>Formulario Login</title>
</head>
<body>
    <div class="contenedor">
        <%- include('../partials/header') %>
        <div class="main">
            <section class="form-login">
            <h5>Formulario Login</h5>

            <% if (errors.length>0) { %>
                <p>Revise el Formulario</p>
                <% }%>
            <div style="color: yellow;">
                <ul>
                    <% errors.forEach(elemento=>{%>
                    <li>
                        <%= elemento.msg%>
                    </li>
                   <% }) %>
                </ul>
            </div>

            <form action="/users/login" method="post">

                <div>
                    <i class="fa-solid fa-user"></i>
                    <label for="email">Usuario</label>
                    <input class="controls" type="email" name="email" id="email" value="<%= values.email%>" placeholder="Usuario">
                </div>
                <div>
                    <i class="fa-solid fa-lock"></i>
                    <label for="password">Constrase単a</label>
                    <input class="controls" type="password" name="password" id="password" placeholder="Contrase単a">
                </div>
                <div>
                    <input class="buttons" type="submit" value="ingresar">
                </div>
                <div>
                    <label for="rememberme">Recuerdame</label>
                    <input type="checkbox" name="rememberme" id="rememberme" checked>
                </div>

            </form>

            <p><a href="#">多Olvidaste tu Contrase単a?</a></p>
            </section>
        </div>
        <%- include('../partials/footer') %>
    </div>
</body>
</html>